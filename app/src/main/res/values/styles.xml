<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<style name="AppTheme.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

	<style name="stepperStyle">
		<item name="android:textSize">@dimen/dot_size</item>
		<item name="android:textColor">@color/colorGrey</item>
		<item name="android:padding">@dimen/small_padding</item>
	</style>

	<style name="FlatButtonStyle" parent="Widget.AppCompat.Button.Borderless">
		<item name="android:textColor">@color/colorGrey</item>
	</style>

	<style name="ProceedButtonStyle" parent="FlatButtonStyle">
		<item name="android:drawableRight">@drawable/ic_keyboard_arrow_right_black_24dp</item>
	</style>

	<style name="BackButtonStyle" parent="FlatButtonStyle">
		<item name="android:drawableLeft">@drawable/ic_keyboard_arrow_left_black_24dp</item>
	</style>

	<style name="RadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
		<item name="android:textColor">@color/colorGrey</item>
		<item name="android:textSize">@dimen/common_text_size</item>
	</style>

	<style name="CommonTextStyle">
		<item name="android:textColor">@color/colorGrey</item>
		<item name="android:textSize">@dimen/common_text_size</item>
	</style>

	<style name="TitleStyle" parent="CommonTextStyle">
		<item name="android:textAlignment">center</item>
		<item name="android:textColor">@color/colorAccent</item>
		<item name="android:textSize">@dimen/title_text_size</item>
	</style>

	<style name="StepTitleStyle" parent="CommonTextStyle">
		<item name="android:textAlignment">center</item>
		<item name="android:padding">@dimen/medium_padding</item>
		<item name="android:textSize">@dimen/text_header</item>
	</style>

</resources>
